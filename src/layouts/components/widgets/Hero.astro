---
import { Icon } from 'astro-icon/components';
import socialData from '@config/social.json';

// Filter out empty social links
const socialLinks = Object.entries(socialData)
  .filter(([_, url]) => url && url.trim() !== ''); // Show all non-empty social links

// Map social platforms to their respective icon names and colors
const socialIcons = {
  bluesky: { icon: 'simple-icons:bluesky', color: 'sky-600' },
  imdb: { icon: 'simple-icons:imdb', color: 'yellow-600' },
  peertube: { icon: 'simple-icons:peertube', color: 'red-600' },
  facebook: { icon: 'simple-icons:facebook', color: 'blue-600' },
  twitter: { icon: 'simple-icons:twitter', color: 'blue-500' },
  instagram: { icon: 'simple-icons:instagram', color: 'pink-600' },
  youtube: { icon: 'simple-icons:youtube', color: 'red-600' },
  linkedin: { icon: 'simple-icons:linkedin', color: 'blue-700' },
  github: { icon: 'simple-icons:github', color: 'gray-800' },
  gitlab: { icon: 'simple-icons:gitlab', color: 'orange-600' },
  medium: { icon: 'simple-icons:medium', color: 'green-700' },
  codepen: { icon: 'simple-icons:codepen', color: 'gray-900' },
  bitbucket: { icon: 'simple-icons:bitbucket', color: 'blue-800' },
  dribbble: { icon: 'simple-icons:dribbble', color: 'pink-500' },
  behance: { icon: 'simple-icons:behance', color: 'blue-900' },
  pinterest: { icon: 'simple-icons:pinterest', color: 'red-700' },
  soundcloud: { icon: 'simple-icons:soundcloud', color: 'orange-500' },
  tumblr: { icon: 'simple-icons:tumblr', color: 'blue-800' },
  reddit: { icon: 'simple-icons:reddit', color: 'orange-600' },
  vk: { icon: 'simple-icons:vk', color: 'blue-600' },
  whatsapp: { icon: 'simple-icons:whatsapp', color: 'green-500' },
  snapchat: { icon: 'simple-icons:snapchat', color: 'yellow-400' },
  vimeo: { icon: 'simple-icons:vimeo', color: 'blue-700' },
  tiktok: { icon: 'simple-icons:music', color: 'black' },
  email: { icon: 'simple-icons:email', color: 'red-500' },
  phone: { icon: 'simple-icons:phone', color: 'green-600' },
  website: { icon: 'simple-icons:web', color: 'purple-600' },
  rss: { icon: 'simple-icons:rss', color: 'orange-500' }
};
---

<section class="relative overflow-hidden bg-white dark:bg-gray-900 rounded-lg">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20">
      <div class="text-center pb-10 md:pb-16">
        <h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading text-gray-900 dark:text-white">
          Mikel-Jon
          <span class="bg-clip-text text-transparent bg-linear-to-r from-blue-500 to-indigo-300 hover:text-orange-300 sm:whitespace-nowrap">[Mike]</span>
            West
        </h1>
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl text-gray-600 dark:text-gray-300 mb-8 hover:text-indigo-500">
            Filmmaker | Artist | Animator 
          </h2>
        </div>

        <div class="flex justify-center gap-4">
          {socialLinks.map(([platform, url]) => {
            const { icon, color } = socialIcons[platform] || { icon: 'mdi:link', color: 'bg-gray-600' };
            return (
              <a
                href={url}
                class={`group inline-flex items-center justify-center w-18 h-18 rounded-lg bg-gray-100 dark:bg-gray-800 transition-all duration-300 hover:scale-110 hover:bg-${color} dark:hover:bg-${color}`}
                aria-label={platform.charAt(0).toUpperCase() + platform.slice(1)}
              >
                <Icon 
                  name={icon} 
                  class={`text-2xl text-gray-600 dark:text-gray-300 dark:group-hover:text-white group-hover:text-black transition-colors duration-300`} 
                />
              </a>
            );
          })}
        </div>
      </div>
    </div>
  </div>
</section>
