---
import { Icon } from 'astro-icon/components';
import socialData from '@config/social.json';

// Filter out empty social links
const socialLinks = Object.entries(socialData)
  .filter(([_, url]) => url && url.trim() !== ''); // Show all non-empty social links

// Map social platforms to their respective icon names and colors
const socialIcons = {
  bluesky: { icon: 'bluesky', color: 'sky-600' },
  imdb: { icon: 'imdb', color: 'yellow-600' },
  peertube: { icon: 'peertube', color: 'red-600' },
  cara: { icon: 'cara', color: 'gray-200' },
  facebook: { icon: 'facebook', color: 'blue-600' },
  twitter: { icon: 'twitter', color: 'blue-500' },
  instagram: { icon: 'instagram', color: 'pink-600' },
  youtube: { icon: 'youtube', color: 'red-600' },
  linkedin: { icon: 'linkedin', color: 'blue-700' },
  github: { icon: 'github', color: 'gray-800' },
  gitlab: { icon: 'gitlab', color: 'orange-600' },
  medium: { icon: 'medium', color: 'green-700' },
  codepen: { icon: 'codepen', color: 'gray-900' },
  bitbucket: { icon: 'bitbucket', color: 'blue-800' },
  dribbble: { icon: 'dribbble', color: 'pink-500' },
  behance: { icon: 'behance', color: 'blue-900' },
  pinterest: { icon: 'pinterest', color: 'red-700' },
  soundcloud: { icon: 'soundcloud', color: 'orange-500' },
  tumblr: { icon: 'tumblr', color: 'blue-800' },
  reddit: { icon: 'reddit', color: 'orange-600' },
  vk: { icon: 'vk', color: 'blue-600' },
  whatsapp: { icon: 'whatsapp', color: 'green-500' },
  snapchat: { icon: 'snapchat', color: 'yellow-400' },
  vimeo: { icon: 'vimeo', color: 'blue-700' },
  tiktok: { icon: 'tiktok', color: 'black' },
  email: { icon: 'email', color: 'red-500' },
  phone: { icon: 'phone', color: 'green-600' },
  website: { icon: 'web', color: 'purple-600' },
  rss: { icon: 'rss', color: 'orange-500' }
};
---

<section class="relative overflow-hidden bg-white dark:bg-gray-900 rounded-lg">
  <div class="max-w-8xl mx-auto px-4 py-16 md:py-24">
    <div class="max-w-2xl">
      <div class="text-center pb-10 md:pb-16">
        <h1 class="text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-4 font-heading text-gray-900 dark:text-white">
          Mikel-Jon
          <span class="bg-clip-text text-transparent bg-linear-to-r from-blue-500 to-indigo-300 hover:text-orange-300 sm:whitespace-nowrap">[Mike]</span>
            West
        </h1>
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl text-gray-600 dark:text-gray-300 mb-8 hover:text-indigo-500">
            Filmmaker | Artist | Animator 
          </h2>
        </div>

        <div class="flex justify-center gap-4">
          {socialLinks.map(([platform, url]) => {
            const { icon, color } = socialIcons[platform] || { icon: 'mdi:link', color: 'gray-600' };
            return (
              <a
                href={url}
                class={`group inline-flex items-center justify-center w-18 h-18 rounded-lg bg-gray-100 dark:bg-gray-800 transition-all duration-300 hover:scale-110`}
                aria-label={platform.charAt(0).toUpperCase() + platform.slice(1)}
              >
                <Icon 
                  name={icon} 
                  class={`text-2xl group-hover:border-${color} transition-colors duration-300`} 
                />
              </a>
            );
          })}
        </div>
      </div>
    </div>
  </div>
</section>
